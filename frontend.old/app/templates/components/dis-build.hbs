<div class="p-3 mb-3 rounded bg-white flex justify-between items-center border-0 border-t-2 border-{{color}}-6 shadow">
  <div class="w-3/4">
    <div class="text-grey-7 text-lg mb-3 flex items-center">
      <span class="mr-3">
        {{#if showLink}}
          {{#link-to 'authenticated.builds.show' build.id class="no-underline"}}
            <span class="border border-{{color}}-5 bg-{{color}}-5 text-grey-1 p-1 text-center rounded inline-block flex items-center">
              <b class="text-grey-1">#{{build.id}}</b> <span class="text-sm ml-2">{{build.state}}</span>
            </span>

          {{/link-to}}
        {{else}}
            <span class="border border-{{color}}-5 bg-{{color}}-5 text-grey-1 p-1 text-center rounded inline-block flex items-center">
              <b class="text-grey-1">#{{build.id}}</b> <span class="text-sm ml-2">{{build.state}}</span>
            </span>
        {{/if}}
      </span>

      <span class="mr-3">
        {{fa-icon 'code'}} {{build.repository.name}}
      </span>

      <span class="mr-3">
        {{fa-icon 'code-branch'}} <strong>{{build.branch}}</strong>
      </span>

      <a href="{{build.commitUrl}}" target="_blank" class="mr-3">
        <span class="text-xs text-grey-6 font-mono">
          {{fa-icon 'dot-circle' prefix="far"}} {{build.shortSha}}
        </span>
      </a>

      <span class="text-grey-6 text-sm">
        {{fa-icon 'user' prefix="far"}} {{build.author}}
      </span>
    </div>

    <div class="text-sm text-grey-5">
      <pre>{{build.commitMessage}}</pre>
    </div>
  </div>

  {{#if lastBuild}}
    <div class="content">
      {{#link-to 'authenticated.builds.show' lastBuild.id}}
        Last Build #{{lastBuild.id}}
      {{/link-to}}
    </div>

  {{/if}}

  <div class="flex items-center">
    {{ui-dropdown items=build.events itemSelected=(action 'triggerEvent')}}

    <!-- <div class="default text">Options</div> -->
    <!-- <i class="dropdown icon"></i> -->
