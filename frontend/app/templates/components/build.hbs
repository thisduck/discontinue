<Card @borderColor={{concat color '-5'}} @borderTop=2 @border=0 class="justify-between">
  <div class="w-4/5">
    <div class="mb-3">
      <div class="mr-3 inline-block">
        {{#if @showLink}}
          {{#link-to 'authenticated.builds.show' @build.id class="no-underline inline-block"}}
            <span class="border border-{{color}}-5 bg-{{color}}-5 text-grey-1 p-1 text-center rounded inline-block flex items-center">
              <b class="text-grey-1">#{{@build.id}}</b> <span class="text-sm ml-2">{{@build.state}}</span>
            </span>

          {{/link-to}}
        {{else}}
          <span class="border border-{{color}}-5 bg-{{color}}-5 text-grey-1 p-1 text-center rounded inline-block flex items-center">
            <b class="text-grey-1">#{{@build.id}}</b> <span class="text-sm ml-2">{{@build.state}}</span>
          </span>
        {{/if}}
      </div>

      <span class="mr-3">
        <Icon @name="bookmarks" /> <span class="middle-align"> {{@build.repository.name}} </span>
      </span>

      <span class="mr-3">
        <Icon @name="git-branch" /> <strong class="align-middle truncate max-w-64 inline-block" title={{@build.branch}}> {{@build.branch}} </strong>
      </span>

      <a href="{{@build.commitUrl}}" target="_blank" class="mr-3 no-underline">
        <span class="text-xs text-grey-6 font-mono">
          <Icon @name="git-commit" />
        <span class="align-middle">{{@build.shortSha}}</span>
        </span>
      </a>

      <span class="text-grey-6 text-sm mr-3">
        <Icon @name="person" /> 
        <span class="align-middle">{{@build.author}}</span>
      </span>

      {{#if @build.startedAt}}
        <span class="text-xs">
          <Icon @name="stopwatch" /> 
          <span class="align-middle">
          {{human-date-diff start=@build.startedAt finish=@build.finishedAt}}
          </span>
        </span>
      {{/if}}
    </div>

    <div class="text-sm text-grey-5">
      <pre class="whitespace-pre-wrap break-words">{{@build.commitMessage}}</pre>
    </div>
  </div>
  <div class="p-2">

  {{#if @lastBuild}}
    <div class="content text-sm">
      {{#link-to 'authenticated.builds.show' @lastBuild.id}}
        Last Build #{{@lastBuild.id}}
      {{/link-to}}
    </div>
  {{/if}}
  </div>

  <div class="">
    {{#each @build.events as |event|}}
      <Button @skin="link" @size="sm" @style="accent" @action={{action this.triggerEvent event}}>
        {{event}}
      </Button>
    {{/each}}
  </div>
</Card>
